	~~~~~~~~~~~~~~~~~~
	
	students_info = [
		{
		    "name" => "Zaw",
		    "sex" => "male",
		    "grade" => 10,
		    "place" => "yangon" 
		},
		{
		    "name" => "Khant",
		    "sex" => "male",
		    "grade" => 9,										> create hash in array
		    "place" => "mandalay"
		},
		{
		    "name" => "Su",
		    "sex" => "female",
		    "grade" => 11,
		    "place" => "taunggyi"
		}
	]
	puts students_info[2]["sex"]								> output is female
	
	Methods ğŸ’­ï¸ğŸ’­ï¸ğŸ’­ï¸ğŸ’­ï¸ğŸ’­ï¸ğŸ’­ï¸ğŸ’­ï¸
	
	Code! â—ï¸
	
	def info(name, age
		puts "Your name is " + name + " and you are " + age.to_s + " years old."
	end
	
	info("Kaung Khant Zaw",20)
	
	~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ methods with default values
	
	def info(name = "no_name", age = 0)
		puts "Your name is " + name + " and you are " + age.to_s + " years old."
	end
	
	info("KKZ")		
	
